# Application Configuration
APP_NAME=clean-orders
APP_VERSION=1.0.0
NODE_ENV=development
GRACEFUL_SHUTDOWN_TIMEOUT=10000
USE_POSTGRES=false

# Server Configuration
SERVER_PORT=3000
SERVER_HOST=0.0.0.0
LOG_LEVEL=info
